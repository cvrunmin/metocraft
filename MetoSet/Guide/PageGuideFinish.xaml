<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MTMCL.Guide"
      xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls" x:Class="MTMCL.Guide.PageGuideFinish"
      mc:Ignorable="d" 
      d:DesignHeight="362" d:DesignWidth="643"
      Title="MTMCL Startup Guide">

    <Grid>
        <Label Content="{DynamicResource GuideFinish}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="21.333"/>
        <Button x:Name="butOK" Content="{DynamicResource Next}" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Style="{StaticResource AccentedSquareButtonStyle}" Custom:ButtonHelper.PreserveTextCase="True" Click="butOK_Click"/>
        <Button x:Name="butBack" Content="{DynamicResource Back}" Margin="0,0,90,10" Style="{StaticResource AccentedSquareButtonStyle}" Height="28" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Custom:ButtonHelper.PreserveTextCase="True" Click="butBack_Click"/>

    </Grid>
</Page>
