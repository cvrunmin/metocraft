<Window x:Class="MetoCraft.KnownErrorReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MetoCraft"
        mc:Ignorable="d"
        Title="KnownErrorReport" Height="200" Width="400">
    <Grid>
        <Canvas HorizontalAlignment="Left" Width="69" Margin="0,50">
            <Ellipse Height="69" Stroke="Black" Width="69" StrokeThickness="2.5"/>
            <Rectangle Height="29" Canvas.Left="30" Stroke="Black" StrokeThickness="2.5" Canvas.Top="30" Width="9" Fill="Black"/>
            <Rectangle Fill="Black" Height="9" Canvas.Left="30" Stroke="Black" StrokeThickness="2.5" Canvas.Top="16" Width="9"/>
        </Canvas>
        <Label x:Name="lblTitle" Content="Oops!" HorizontalAlignment="Left" Margin="75,0,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label x:Name="lblDesc" Content="" Margin="76,30,0,0" VerticalAlignment="Top"/>
        <Button x:Name="butOk" Content="OK" Click="butOk_Click" HorizontalAlignment="Right" Width="75" Height="19" VerticalAlignment="Bottom"/>
        <ScrollViewer Margin="76,57,0,19" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="lblHelp" TextWrapping="Wrap"/>
        </ScrollViewer>
    </Grid>
</Window>
